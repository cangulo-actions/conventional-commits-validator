{
    "changeTypes": {
        "break": {
            "release": "major"
        },
        "major": {
            "release": "major"
        },
        "feat": {
            "release": "minor"
        },
        "fix": {
            "release": "patch"
        },
        "refactor": {
            "release": "none"
        },
        "docs": {
            "release": "none"
        }
    },
    "scopes": {
        "tfm": {
            "files":[
                "terraform/**"
            ],
            "versioning": {
                "file": "terraform/version.json"
            }
        },
        "src": {
            "files":[
                "src/**"
            ]
        }
    }
}